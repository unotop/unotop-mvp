{
  "name": "unotop-mvp",
  "private": true,
  "version": "0.6.0-beta",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\" \"index.html\"",
    "test:clean": "rimraf node_modules/.vitest || true",
    "test:watch": "npm run test:clean && vitest",
    "test": "npm run test:clean && vitest run",
    "test:critical": "npm run test:clean && vitest run tests/invariants.limits.test.tsx tests/accessibility.ui.test.tsx tests/acceptance.mix-cap.ui.test.tsx tests/persist.roundtrip.test.tsx tests/persist.debts.v3.test.tsx tests/deeplink.banner.test.tsx",
    "test:ui": "vitest --ui",
    "audit": "vite-node scripts/audit-current-vs-legacy.ts | Out-File -Encoding utf8 audit.json"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^18.3.1",
    "recharts": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vitest": "^1.5.0"
  }
}
